{
	"manifest_version": 2,
	"name": "TSI Browser Tools",
	"description": "Утилітний плагін для полегшення розробки продуктів на платформі Creatio/Bpmonline",
	"version": "1.4.2",
	"icons": {
		"128": "./img/128.png"
	},
	"browser_action": {
		"default_icon": "./img/128.png",
		"default_popup": "./popup/index.html"
	},
	"background": {
		"scripts": ["background/background.js"],
		"persistent": false
	},
	"content_scripts": [{
		"matches": ["*://10.0.14.214/*", "*://*.tsintegr.com/*", "*://*.tscrm.com/*", "*://jira/*", "*://localhost/*", "*://sales-web/*"],
		"js": ["./content/content.js"]
	}],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": ["declarativeContent", "storage", "activeTab"],
	"web_accessible_resources": [
		"*.json",
		"*.js",
		"*.css"
	]
}